@model IEnumerable<Inventario.Models.Producto>

@{
    ViewBag.Title = "Listado de Productos";
}

<h2>Listado de Productos</h2>

<p>
    <a class="btn btn-primary" href="/Productos/Create"><span class="glyphicon glyphicon-plus"></span></a>
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @if (!string.IsNullOrEmpty(item.Imagen))
            {
                <img scr="@Url.Content(item.Imagen)" alt="Image" style="width:150px;height:150px;max-width: 100%; height: auto;"/>
            }
        </td>
        <td>
            <a class="btn btn-success" href="/Productos/Edit/@item.IDProducto"><span class="glyphicon glyphicon-pencil"></span></a>
            <a class="btn btn-info" href="/Productos/Details/@item.IDProducto"><span class="glyphicon glyphicon-info-sign"></span></a>
            <a class="btn btn-danger" href="/Productos/Delete/@item.IDProducto"><span class="glyphicon glyphicon-trash"></span></a>
        </td>
    </tr>
}

</table>
